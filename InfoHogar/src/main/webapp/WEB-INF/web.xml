<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <servlet>
    <servlet-name>ControladorDeBusqueda</servlet-name>
    <servlet-class>aiss.controller.ControladorDeBusqueda</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ControladorDeBusqueda</servlet-name>
    <url-pattern>/controladorBuscadorPrincipal</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ControladorDeBusquedaEspecificada</servlet-name>
    <servlet-class>aiss.controller.ControladorDeBusquedaEspecificada</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ControladorDeBusquedaEspecificada</servlet-name>
    <url-pattern>/controladorBuscadorSecundario</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ControladorObtenerCoordenadas</servlet-name>
    <servlet-class>aiss.controller.ControladorObtenerCoordenadas</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ControladorObtenerCoordenadas</servlet-name>
    <url-pattern>/obtenerCoordenadas</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ControladorDeBusquedaLugaresCercanos</servlet-name>
    <servlet-class>aiss.controller.ControladorDeBusquedaLugaresCercanos</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ControladorDeBusquedaLugaresCercanos</servlet-name>
    <url-pattern>/controladorVerLugaresCercanos</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ControladorGoogleDrive</servlet-name>
    <servlet-class>aiss.controller.ControladorGuardarInformacion</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ControladorGoogleDrive</servlet-name>
    <url-pattern>/controladorGuardarInformacion</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/error.jsp</location>
  </error-page>
  <servlet>
    <description></description>
    <display-name>GoogleDriveAuthController</display-name>
    <servlet-name>GoogleDriveAuthController</servlet-name>
    <servlet-class>aiss.controller.oauth.GenericAuthController</servlet-class>
    <init-param>
      <param-name>provider</param-name>
      <param-value>GoogleDrive</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>GoogleDriveAuthController</servlet-name>
    <url-pattern>/AuthController/GoogleDrive</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>GoogleDriveOAuth2Callback</display-name>
    <servlet-name>GoogleDriveOAuth2Callback</servlet-name>
    <servlet-class>aiss.controller.oauth.OAuth2Callback</servlet-class>
    <init-param>
      <param-name>provider</param-name>
      <param-value>GoogleDrive</param-value>
    </init-param>
    <init-param>
      <param-name>onSuccess</param-name>
      <param-value>redirect:/controladorGuardarInformacion</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>GoogleDriveOAuth2Callback</servlet-name>
    <url-pattern>/oauth2callback/GoogleDrive</url-pattern>
  </servlet-mapping>
  <context-param>
    <param-name>resteasy.servlet.mapping.prefix</param-name>
    <param-value>/api</param-value>
  </context-param>
  <servlet>
    <servlet-name>Resteasy</servlet-name>
    <servlet-class>org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher</servlet-class>
    <init-param>
      <param-name>javax.ws.rs.Application</param-name>
      <param-value>aiss.api.InfoHogarApplication</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>Resteasy</servlet-name>
    <url-pattern>/api/*</url-pattern>
  </servlet-mapping>
</web-app>